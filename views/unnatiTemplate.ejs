<body class="container">
    <div class="container">
        <h4 class="col-sm-12" style="padding-left: 0px"><%= data.projectName %></h4>
    </div>


    <hr class="new1">
    <div class="" style=" background: #eee;
    padding: 15px 40px;">
        <div class="row">
            <div style="width:30%; float:left;">
                <p><b>GOAL</b></p>
            </div>
            <div style="width:50%; float:left;">
                <p><%= data.goal %></p>
            </div>

        </div>
        <div class="row">
            <div style="width:30%; float:left;">
                <p><b>DURATION</b></p>
            </div>
            <div style="width:50%; float:left;">
                <p><%= data.duration %></p>
            </div>

        </div>

        <div class="row">
            <div style="width:30%; float:left;">
                <p><b>START DATE</b></p>
            </div>
            <div style="width:50%; float:left;">
                <p><%= data.startDate %></p>
            </div>

        </div>
        <div class="row">
            <div style="width:30%; float:left;">
                <p><b>END DATE</b></p>
            </div>
            <div style="width:50%; float:left;">
                <p><%= data.endDate %></p>
            </div>

        </div>

        <div class="row">
            <div style="width:30%; float:left;">
                <p><b>STATUS</b></p>
            </div>
            <div style="width:50%; float:left;">
                <p><%= data.status %></p>
            </div>

        </div>
    </div>

    <hr class="new1">

    <div>
        <div style="padding: 15px 20px;">
            <div style="width:50%; float:left;">
                <h5><b>Total Tasks : <%= data.tasksArray.length %></b></h5>
            </div>

            <div style="width:50%; float:right">
                <h5 style="text-align:right;"><b><%= data.category %></b></h5>
            </div>
        </div>
        <br>

        <% for (var i=0;i < data.tasksArray.length; i++){  %>
        <p style="padding: 15px 20px;"><b><%= data.tasksArray[i].title %></b></p>
        <hr class="new1">
        <% } %>


    </div>


